<table class="table table-striped" id="sync_table">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Estado</th>
  </tr>
  </thead>
  <tbody>
  <% restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
      <td><%= status_badge restaurant.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>