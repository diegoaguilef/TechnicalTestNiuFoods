<%= form_with(model: [@restaurant, device]) do |form| %>
  <% if device.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
        <% device.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :version, class: 'form-label' %>
    <%= form.text_field :version, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, Device.statuses.keys, {}, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :category_id, class: 'form-label' %>
    <%= form.collection_select :category_id, Category.all, :id, :name,
                               {}, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
